{
    "manifest_version": 3,
    "version": "12345",
    "name": "Autolingo",
    "description": "Automatically completes Duolingo lessons so you don't have to!",
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "scripts/utils.js",
                "scripts/solver.js",
                "scripts/duolingoStatusEvent.js",
                "scripts/pageController/mainPage.js",
                "scripts/pageController/lessonPage.js"
            ],
            "css": [
                "styles/lesson.css"
            ],
            "world": "MAIN",
            "matches": [
                "*://*.duolingo.com/*"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "60": "icons/icon-60.png",
        "128": "icons/icon-128.png",
        "256": "icons/icon-256.png"
    }
}